<mvc:View
    controllerName="ap.materialapp.controller.Main"
    xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true">

    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <Table
                id="materialTable"
                items="{/MaterialSet}"
                headerText="Material"
            >
                <columns>
                    <Column
                        id="matnrCol"
                        width="12em"
                    >
                        <VBox>
                            <Text text="MaterialNr" />
                        </VBox>
                    </Column>
                    <Column
                        id="maktxCol"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                    >
                        <Text text="Omschrijving" />
                    </Column>
                    <Column
                        id="matklCol"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                    >
                        <Text text="Group" />
                    </Column>
                    <Column
                        id="mtartCol"
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="End"
                    >
                        <Text text="Type" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Navigation" vAlign="Middle" press=".onListItemPress">
                        <cells>
                            <ObjectIdentifier
                                title="{Matnr}"
                            />
                            <Text text="{Maktx}" />
                            <Text text="{Matkl}" />
                            <Text text="{Mtart}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
